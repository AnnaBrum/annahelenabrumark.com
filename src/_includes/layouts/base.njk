{# src/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or "Anna Helena Brumark" }}</title>

    {# Keep existing CSS via passthrough (quick win) #}
    <link rel="stylesheet" href="/CSS/global.css" />
    <link rel="stylesheet" href="/CSS/color-themes.css" />
    <link rel="stylesheet" href="/CSS/nav.css" />

    {% if theme %}
    <link rel="stylesheet" href="/CSS/{{ theme }}.css" />
    {% endif %}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ancizar+Sans:ital,wght@0,100..1000;1,100..1000&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Red+Hat+Text:ital,wght@0,300..700;1,300..700&family=Roboto:ital,wght@0,100..900;1,100..900&family=TASA+Orbiter:wght@400..800&display=swap"
      rel="stylesheet"
    />

    {# If/when you move styles into the bundle, render them here: #} {#
    <style>
      {% getBundle "css" %}
    </style>
    #} {# Or as a file URL:
    <link rel="stylesheet" href="{% getBundleFileUrl 'css' %}" />
    #}
  </head>
  <body class="{{ bodyClass }}" data-theme="{{ theme }}">
    <div class="container">
      <nav>
        <ul class="nav-list">
          <li class="nav-list-item"><a href="/">Home</a></li>
          <li class="nav-list-item"><a href="/projects/">Projects</a></li>
          <li class="nav-list-item"><a href="/about/">About</a></li>
        </ul>
      </nav>

      <main class="{{ mainClass | default(theme) }}">
        {{ content | safe }}
      </main>
    </div>

    <script src="/functions.js"></script>
  </body>
</html>
